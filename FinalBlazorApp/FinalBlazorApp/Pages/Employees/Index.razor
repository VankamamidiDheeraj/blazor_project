@page "/employees"

<AuthorizeView>
    <Authorized>

@if (employees == null)
{
    <p><em>Loading...</em></p>
}
else
{
<h3>List of Employees</h3>
<a href="/employees/create" class="btn-create">Create New</a>
    <div class="table-container">
        <table class="styled-table">
            <thead>
                <tr>
                    <th>Emp ID</th>
                    <th>Name</th>
                    <th>Designation</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in employees)
                {
                    <tr>
                        <td>@emp.EmpId</td>
                        <td>@emp.EmpName</td>
                        <td>@emp.Designation</td>
                        <td>@emp.Email</td>
                        <td>@emp.Phone</td>
                        <td>
                            <a href="/employees/details/@emp.EmpId" class="btn-action">Details</a>
                            <a href="/employees/edit/@emp.EmpId" class="btn-action">Edit</a>
                            <a href="/employees/delete/@emp.EmpId" class="btn-action">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
    </Authorized>
    <NotAuthorized>
        <p style="text-align:center; color:red; font-weight:bold;">You must be logged in to view data.</p>
    </NotAuthorized>
</AuthorizeView>


<style>
    body {
        background: linear-gradient(to right, #f8f9fa, #e3f2fd);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h3 {
        text-align: center;
        color: #0d6efd;
        font-weight: 600;
        margin-top: 20px;
    }

    .btn-create {
        display: block;
        width: fit-content;
        margin: 10px auto 30px auto;
        padding: 10px 20px;
        background-color: #198754;
        color: white;
        text-decoration: none;
        border-radius: 6px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

        .btn-create:hover {
            background-color: #157347;
        }

    .table-container {
        display: flex;
        justify-content: center;
        margin-bottom: 40px;
    }

    .styled-table {
        width: 90%;
        max-width: 1000px;
        border-collapse: collapse;
        background-color: #ffffff;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        border-radius: 8px;
        overflow: hidden;
    }

        .styled-table th, .styled-table td {
            padding: 12px 16px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
        }

        .styled-table thead {
            background-color: #0d6efd;
            color: white;
        }

        .styled-table tbody tr:hover {
            background-color: #f1f1f1;
        }

    .btn-action {
        display: inline-block;
        margin-right: 6px;
        padding: 6px 12px;
        background-color: #0d6efd;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        font-size: 0.9rem;
        transition: background-color 0.3s ease;
    }

        .btn-action:hover {
            background-color: #0b5ed7;
        }
</style>