        text-align: center;
        color: #dc3545;
        font-weight: 600;
        margin-top: 20px;
    }

    .details-container {
        display: flex;
        justify-content: center;
        margin-top: 30px;
    }

    .details-card {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        width: 500px;
    }

    .detail-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 15px;
        font-size: 1rem;
    }

        .detail-row label {
            font-weight: bold;
            color: #333;
        }

        .detail-row span {
            color: #555;
        }

    .button-group {
        display: flex;
        justify-content: space-between;
        margin-top: 30px;
    }

    .btn-delete {
        background-color: #dc3545;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 6px;
        font-weight: bold;
        font-size: 1rem;
        cursor: pointer;
