@page "/trainers/delete/{trid:int}"

<h3>Delete Trainer</h3>

<div class="details-container">
    <div class="details-card">
        <div class="detail-row">
            <label>Trainer ID:</label>
            <span>@trainer.TrainerId</span>
        </div>
        <div class="detail-row">
            <label>Trainer Name:</label>
            <span>@trainer.TrainerName</span>
        </div>
        <div class="detail-row">
            <label>Trainer Type:</label>
            <span>@trainer.Type</span>
        </div>
        <div class="detail-row">
            <label>Email:</label>
            <span>@trainer.Email</span>
        </div>
        <div class="detail-row">
            <label>Phone Number:</label>
            <span>@trainer.Phone</span>
        </div>

        <div class="button-group">
            <button @onclick="DeleteTrainer" class="btn-delete">Delete</button>
            <a href="/trainers" class="btn-back">Back to List</a>
        </div>
    </div>
</div>

